import matplotlib.pyplot as pyplot
import random
import math

sum = 0
for num in range(100):
    num = random.randint(1, 1001)
    sum += num
average = sum//1000
print(" the average of the random numbers is: ", average)


for a in range(-10, 10):
    sin = math.sin(0.5 * a)
    equation = 14 * sin
    pyplot.plot(a, equation)
    pyplot.xlabel(a)
    pyplot.ylabel(equation)
    pyplot.show()



for x in range(0, 10, 2):
    y = 2 * x + 10

pyplot.plot(x, y)
pyplot.xlabel(x)
pyplot.ylabel(y)
pyplot.show()
